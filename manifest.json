{
  "manifest_version": 2,

  "name"        : "Memrise Speak",
  "description" : "Speaks text on a memrise page where none was before",
  "version"     : "1.2",
  "icons"       : {"16":"memrise.png", "128": "memrise.png"},
  
  "browser_action": {
    "default_title" : "Memrise Speaks",
    "default_icon"  : "memrise.png",
	"default_popup" : "popup.html"
  },
  "content_scripts": [
    {
      "matches" : ["http://www.memrise.com/course/*/garden/grow/","http://www.memrise.com/course/*/garden/water/","http://www.memrise.com/course/*/garden/overwater/","http://www.memrise.com/course/*/garden/review/","http://www.memrise.com/course/*/garden/review-difficult-things/"],
      "js"      : ["globalFunctions.js", "main.js"]
    }
  ],
  "permissions" : [
	"tts",
	"storage"
  ],
  "background": {
	"scripts": ["tts.js"],
	"persistent": false
  }
}